{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext",
            // "DOM",
        ],
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "strict": true,
        "sourceMap": false,
        "declaration": true,
        // "noImplicitAny": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "paths": {
            "@src/*": [ "*" ],
            "@schema/*": [ "schema/*" ],
            "@auth/*": [ "auth/*" ],
            "@api/*": [ "api/*" ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist"
    ]
}